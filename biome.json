{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,

      "style": {
        "useConst": "error",
        "useTemplate": "error"
      },

      "suspicious": {
        "noExplicitAny": "off"
      },

      "complexity": {
        "noForEach": "off"
      }
    }
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded"
    }
  }
}
